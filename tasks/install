#!/usr/bin/env bash

STAGE="development"
DOMAIN="localhost"

if [ $# -eq 1 ]; then
  DOMAIN="$1"
if [ $# -gt 1 ]; then
  DOMAIN="$1"
  STAGE="$2"
fi

./run-task configure "$DOMAIN"

if [ "$STAGE" = "production" ]; then
  touch .production
  ./run-task leissue
else
  ./run-task openssl-self-signed
fi

./run-task openssl-dhparam
./docker-compose up -d
./run-task wp-install
