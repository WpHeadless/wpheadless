#!/usr/bin/env bash

set -eo pipefail

DOMAIN="localhost"
LETSENCRYPT="false"

if [ -f .env ]; then
  echo "Error: wpheadless seems to be already installed! aborting..."
  exit 1
fi

for i in "$@"; do
  case $i in
    --domain=*)
      DOMAIN="${i#*=}"
      ;;
    --admin-email=*)
      ADMIN_EMAIL="${i#*=}"
      ;;
    --admin-password=*)
      ADMIN_PASSWORD="${i#*=}"
      ;;
    --letsencrypt=*)
      LETSENCRYPT="${i#*=}"
      ;;
    --docker-profile=*)
      DOCKER_PROFILE="${i#*=}"
      ;;
    --aws-use-ec2-iam-role=*)
      AWS_USE_EC2_IAM_ROLE="${i#*=}"
      ;;
    --aws-access-key-id=*)
      AWS_ACCESS_KEY_ID="${i#*=}"
      ;;
    --aws-secret-access-key=*)
      AWS_SECRET_ACCESS_KEY="${i#*=}"
      ;;
    --aws-logs-group=*)
      AWSLOGS_GROUP="${i#*=}"
      ;;
    --from-email=*)
      FROM_EMAIL="${i#*=}"
      ;;
  esac
done

# DOMAIN will be passed to docker containers
export DOMAIN

# Create http vhost for served domain
mkdir -p "var/vhosts/${DOMAIN}"

./run-task configure \
  --domain="$DOMAIN" \
  --admin-email="$ADMIN_EMAIL" \
  --letsencrypt="$LETSENCRYPT" \
  --docker-profile="$DOCKER_PROFILE" \
  --aws-logs-group="$AWSLOGS_GROUP" \
  --from-email="$FROM_EMAIL"

if [ "$LETSENCRYPT" = "true" ]; then
  ./run-task leissue-standalone || \
    ./run-task openssl-self-signed
else
  ./run-task openssl-self-signed
fi

./run-task openssl-dhparam
./docker-compose up -d

./run-task wp-install \
  --admin-password="'$ADMIN_PASSWORD'" \
  --aws-use-ec2-iam-role="'$AWS_USE_EC2_IAM_ROLE'" \
  --aws-access-key-id="'$AWS_ACCESS_KEY_ID'" \
  --aws-secret-access-key="'$AWS_SECRET_ACCESS_KEY'"
