#!/usr/bin/env sh

set -eo pipefail

cd "$(dirname "$0")"
TASKS_DIR="tasks"

if [ $# -eq 0 ]; then
  echo "Usage: $(basename "$0") <TASK> [ARGS...]"
  echo "Available tasks:"
  echo "  <task-service-name>-sh"
  echo "$(ls "$TASKS_DIR")" | sed 's/^/  /'
  exit 1
fi

TASK=$1

if grep -qe "\S*task-${TASK}:$" compose.d/tasks.yml; then
  TASK_SERVICE="task-${TASK}"
else
  TASK_SERVICE="task-${TASK%%-*}"
fi

shift 1

if [ "${TASK#*-}" == "sh" ]; then
  if [ $# -eq 0 ]; then
    TASK="sh"
  else
    TASK="$@"
  fi
else
  TASK_FILE="${TASKS_DIR}/${TASK}"
  TASK="${TASK_FILE} $@"
fi

if [ -z "$TASK_FILE" ] || echo "$TASK_FILE" | grep -q "-"; then
  TASK_COMMAND=""
  if [ -f "$TASK_FILE" ]; then
    TASK_COMMAND="sh -c ${TASK}"
  fi

  COMPOSE_SERVICES_TYPE=tasks ./docker-compose \
    run --rm --service-ports "$TASK_SERVICE" $TASK_COMMAND
else
  if [ ! -f "$TASK_FILE" ]; then
    echo Task "$TASK" does not exist
    exit 1
  fi

  source "$TASK_FILE"
fi
