#!/usr/bin/env sh

set -eo pipefail

cd "$(dirname "$0")"
TASKS_DIR="tasks"

if [ $# -eq 0 ]; then
  echo "Usage: $(basename "$0") <TASK> [ARGS...]"
  echo "Available tasks:"
  echo "  <task-service-name>-sh"
  echo "$(ls "$TASKS_DIR")" | sed 's/^/  /'
  exit 1
fi

TASK=$1
TASK_SERVICE="task-${TASK%%-*}"
shift 1

if [ "${TASK#*-}" == "sh" ]; then
  if [ $# -eq 0 ]; then
    TASK="sh"
  else
    TASK="$@"
  fi
else
  TASK="${TASKS_DIR}/${TASK} $@"
fi

./docker-compose \
  -f docker-compose.d/tasks.yml \
  run --rm --service-ports "$TASK_SERVICE" $TASK
