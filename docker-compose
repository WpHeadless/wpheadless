#!/usr/bin/env sh

set -eo pipefail

DOCKER_COMPOSE_VERSION=1.23.1
COMPOSE_PROJECT_NAME=wp-headless
COMPOSE_SERVICES_TYPE=${COMPOSE_SERVICES_TYPE:-services}

cd "$(dirname "$0")"

# current stage detection

if [ -f .production ]; then
  STAGE='production'
else
  STAGE='development'
fi

# docker run options

if [ -t 1 ]; then
  DOCKER_RUN_OPTIONS='-t'
fi

if [ -t 0 ]; then
  DOCKER_RUN_OPTIONS="$DOCKER_RUN_OPTIONS -i"
fi

# docker-compose options

DOCKER_COMPOSE_OPTIONS='-f docker-compose.d/common.yml'

if [ -f "docker-compose.d/${COMPOSE_SERVICES_TYPE}.yml" ]; then
  DOCKER_COMPOSE_OPTIONS="${DOCKER_COMPOSE_OPTIONS} -f docker-compose.d/${COMPOSE_SERVICES_TYPE}.yml"
fi

if [ -f "docker-compose.d/${COMPOSE_SERVICES_TYPE}-${STAGE}.yml" ]; then
  DOCKER_COMPOSE_OPTIONS="${DOCKER_COMPOSE_OPTIONS} -f docker-compose.d/${COMPOSE_SERVICES_TYPE}-${STAGE}.yml"
fi

docker \
  run --rm \
  $DOCKER_RUN_OPTIONS \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v "${PWD}:${PWD}" \
  --workdir="${PWD}" \
  --env PWD="$PWD" \
  --env COMPOSE_PROJECT_NAME="$COMPOSE_PROJECT_NAME" \
  "docker/compose:${DOCKER_COMPOSE_VERSION}" \
  $DOCKER_COMPOSE_OPTIONS \
  "$@" \
  ;
